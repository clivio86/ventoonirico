{% extends 'DanMainBundle::layout.html.twig' %}

{% block title %}Ventoonirico's collection{% endblock %}
{% block content %}
{% endblock %}

{% block templates %}
    {{parent()}}
    <script type="text/template" id="game-list">
        Ventoonirico dispone di <strong><%=length%></strong> giochi
        <table class="game-list table table-bordered">
        </table>
    </script>

    <script type="text/template" id="game">
        <tr id="game_<%= game.id %>" >
            <td class="image">
                <a href="http://boardgamegeek.com/boardgame/<%= game.id %>" target="_blank" ><img src="<%= game.thumbnail %>" /></a>
            </td>
            <td>
                <div class="pull-right game-status well"></div>
                <h4><%= game.name %></h4>
                di <em><%= game.owners.join(', ') %></em><br/>
                <%= game.minPlayers %> - <%= game.maxPlayers %> giocatori<br/>
            </td>
        </tr>
    </script>

{% endblock%}
